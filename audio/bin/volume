#!/bin/luajit

local fileio = require('kk.fileio')

local function getenv(varname)
	local var = os.getenv(varname)
	if var then
		return var
	else
		io.stderr:write(string.format('name: %s does not exist', varname))
		os.exit(1)
	end
end

local function get_mute_icon(mute)
	if mute == 0 then
		return "墳"
	elseif mute == 1 then
		return "ﱝ"
	else
		io.stderr:write(string.format('muteicon: %s is not 0 or 1', mute))
		os.exit(1)
	end
end

local debug
if #arg == 1 and arg[1] == "-v" then
	debug = print
else
	debug = function() end
end

local cache_var = "XDG_CACHE_HOME"
debug('getting ' .. cache_var)
local cache = getenv(cache_var)
debug("cache is " .. cache)
local newest_path = cache .. '/bin/pulsetest.newest_sink_index'
debug('reading from ' .. newest_path)
local newest = tonumber(fileio.firstline(newest_path))
debug('newest sink is ' .. newest)
local mute_path = string.format('%s/bin/pulsetest.sinks.%s.mute', cache, newest)
debug('reading from ' .. mute_path)
local mute_icon = get_mute_icon(tonumber(fileio.firstline(mute_path)))
debug('mute is ' .. mute_icon)
local volume_path = string.format('%s/bin/pulsetest.sinks.%s.volume', cache, newest)
debug('reading from ' .. volume_path)
local volume = tonumber(fileio.firstline(volume_path))
debug('volume is ' .. volume)

print(string.format(' %s %s%% ', mute_icon, volume))

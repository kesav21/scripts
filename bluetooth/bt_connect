#!/bin/bash


name=$(cat ~/.config/scripts/bt_devices | cut -d" " -f3- | dmenu)

# if name is empty
if [ -z "$name" ];
then
	echo "no device selected"
else
	echo "name: $name"

	macid=$(cat ~/.config/scripts/bt_devices | grep "$name" | awk '{print $2}')
	echo "macid: $macid"

	# use the macid to connect to the bluetooth device
	echo "connect $macid" | bluetoothctl
fi




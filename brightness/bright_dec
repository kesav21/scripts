#!/bin/bash
#
# reduces brightness by 2%
#


# calculate 2% of maximum brightness
diff=$(echo "0.02 * $(~/.bin/bright_getmax)" | bc)
# subtract 2% from current brightness
bright_new=$(echo "$(~/.bin/bright_get) - $diff" | bc)

# remove decimal places
backlight=${bright_new%.*}

echo "$backlight" > /sys/class/backlight/intel_backlight/brightness

# send notification
~/.bin/dunst_brightness


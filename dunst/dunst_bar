#!/bin/dash
#
# $1 is the current value
# $2 is the maximum value
#

scale=30

p_progress=$(echo "100 * $1 / $2" | bc)
s_progress=$(echo "$scale * $1 / $2" | bc)
spacing=$(echo "$scale - $s_progress" | bc)

bar_progress="$(seq -s "â”€" $s_progress | sed 's/[0-9]//g')"
bar_spacing="$(seq -s "-" $spacing | sed 's/[0-9]//g')"

echo "$p_progress%: |$bar_progress$bar_spacing|"


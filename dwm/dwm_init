#!/bin/sh

SCRIPTS_DIR=~/.local/scripts

# compositor
# notification daemon
nohup dunst > $SCRIPTS_DIR/.logs/dunst.log &

# set wallpaper
hsetroot -solid "#282828" & # gruvbox

# sets the statusbar
nohup dwm_setstatbar > $SCRIPTS_DIR/.logs/dwm_setstatbar &

# battery low/full notifications
nohup batt_notifier > $SCRIPTS_DIR/.logs/batt_notifier &

# initialize screensaver
nohup screensaver_init > $SCRIPTS_DIR/.logs/screensaver_init &

# initialize meta scripts
nohup scripts_autocp > $SCRIPTS_DIR/.logs/scripts_autocp &
nohup scripts_autorm > $SCRIPTS_DIR/.logs/scripts_autorm &


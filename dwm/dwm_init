#!/bin/sh

# notification daemon
nohup dunst > $SCRIPTSPATH/.logs/dunst.log &

# set wallpaper
hsetroot -solid "#282828" & # gruvbox

# sets the statusbar
nohup dwm_setstatbar > $SCRIPTSPATH/.logs/dwm_setstatbar &

# battery low/full notifications
nohup batt_notifier > $SCRIPTSPATH/.logs/batt_notifier &

# initialize screensaver
nohup screensaver_init > $SCRIPTSPATH/.logs/screensaver_init &

# initialize meta scripts
nohup scripts_autocp > $SCRIPTSPATH/.logs/scripts_autocp &
nohup scripts_autorm > $SCRIPTSPATH/.logs/scripts_autorm &


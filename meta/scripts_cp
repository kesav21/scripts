#!/bin/sh

symlink_exe () {
	cd $SCRIPTSPATH
	for line in $(git ls-files)
	do
		[ -x "$line" ] && ln -sv "$(realpath "$line")" "$BINPATH/$(basename $line)"
	done
}

# empty bin

echo -e "\nclearing $BINPATH:\n"
rm -rfv $BINPATH && mkdir $BINPATH

# refill bin

echo -e "\nadding scripts to $BINPATH/\n"
symlink_exe

echo ''


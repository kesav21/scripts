#!/bin/sh

cd $SCRIPTSPATH
files=$(find . \( ! -regex '.*/\..*' \) -type f)

echo -e "\nclearing $BINPATH:\n"

rm -rfv $BINPATH && mkdir $BINPATH

echo -e "\nadding scripts to $BINPATH/\n"

for file in $files
do
	if [ -x "$file" ]
	then
		ln -sv $(realpath $file) $BINPATH/$(basename $file)
	fi
done

echo ""


#!/bin/luajit

function readline(filename)
	file = io.open(filename)
	if file then
		for line in io.lines(filename) do
			io.close(file)
			return line
		end
	end
end

function muteicon(mute)
	if mute == 0 then return "墳" else return "ﱝ" end
end

cache = os.getenv("XDG_CACHE_HOME")
mute = tonumber(readline(cache .. '/bin/pulsetest.sink.mute'))
volume = tonumber(readline(cache .. '/bin/pulsetest.sink.volume'))
print(muteicon(mute) .. ' ' .. volume .. '% ')


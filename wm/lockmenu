#!/bin/sh

doaction() {
	read -r option

	case "$option" in
		'lock')
			slock
			;;
		'quit')
			pkill -x dwmloop
			;;
		'refresh')
			pkill -x dwm
			;;
		'reboot')
			reboot
			;;
		'shutdown')
			shutdown now
			;;
	esac
}

echo 'lock quit refresh reboot shutdown' | tr ' ' '\n' | dmenu | doaction
